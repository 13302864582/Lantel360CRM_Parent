<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--启动背景透明-->
      <!-- <item name="android:windowBackground">@color/translucent</item>
        <item name="android:windowIsTranslucent">true</item>-->
    </style>


    <!--宽高包裹子view-->
    <style name="wrap_wh">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--宽高包裹子view-->
    <style name="match_h_0_w">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--宽高包裹子view-->
    <style name="match_w_0_h">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <!--宽高包裹子view-->
    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--宽高mathch子view-->
    <style name="match_wrap_vertical" parent="match_wrap">
        <item name="android:orientation">vertical</item>
    </style>

    <!--匹配父控件，水平布局-->
    <style name="match_wh_horizontal" parent="match_wh">
        <item name="android:orientation">horizontal</item>
    </style>


    <!--宽高与父控件相同-->
    <style name="match_wh">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--抽屉右侧-->
    <style name="match_wh_end" parent="match_wh">
        <item name="android:layout_gravity">end</item>
    </style>

    <!--包裹纵向布局-->
    <style name="LineV_wrap_wh" parent="wrap_wh">
        <item name="android:orientation">vertical</item>
    </style>

    <!--包裹横向布局-->
    <style name="LineH_wrap_wh" parent="wrap_wh">
        <item name="android:orientation">horizontal</item>
    </style>

    <!--包裹纵向布局-->
    <style name="centerH_wrap_wh" parent="wrap_wh">
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="right_wrap_wh" parent="wrap_wh">
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="left_wrap_wh" parent="wrap_wh">
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="limit_right_wrap_wh" parent="right_wrap_wh">
        <item name="android:lines">1</item>
        <item name="android:maxEms">6</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="limit_wrap_wh" parent="wrap_wh">
        <item name="android:lines">1</item>
        <item name="android:maxEms">6</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="line_wrap_wh" parent="wrap_wh">
        <item name="android:lines">1</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/edit_color</item>
        <item name="colorControlActivated">@color/edit_color</item>
    </style>


</resources>
