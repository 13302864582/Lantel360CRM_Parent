<resources>
    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <!--底部导航字体没有选中的样式-->
    <style name="bottom_normal_text">
        <item name="android:textColor">@color/font_hint</item>
        <item name="android:textSize">11sp</item>
    </style>

    <!--底部导航字体选中的样式-->
    <style name="bottom_selected_text">
        <item name="android:textColor">@color/font_select</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="card_empty_add" parent="wrap_wh">
        <item name="android:textSize">@dimen/card_empty_add</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/toolbar_home_img_user_margin</item>
    </style>

    <style name="loginn_img" parent="wrap_wh">
        <item name="android:padding">@dimen/back_padding</item>
        <item name="android:layout_marginTop">@dimen/loginn_img_marginTop</item>
    </style>

    <style name="login_bt" parent="wrap_wh">
        <item name="android:layout_marginTop">@dimen/list_margin</item>
        <item name="android:padding">@dimen/account_value_margin</item>
        <item name="android:textSize">@dimen/login_bt</item>
        <item name="android:textColor">@color/login_bt</item>
    </style>

    <style name="login_edit">
        <item name="android:background">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/account_value_margin</item>
        <item name="android:layout_marginLeft">@dimen/list_margin</item>
        <item name="android:textSize">@dimen/login_edit</item>
        <item name="android:textColor">@color/login_edit</item>
    </style>

    <dimen name="card_empty_add">11sp</dimen>
    <dimen name="loginn_img_ml">4dp</dimen>
    <dimen name="loginn_img_marginTop">30dp</dimen>
    <dimen name="login_bt">14sp</dimen>
    <dimen name="login_edit">15sp</dimen>
    <color name="login_bt">#717171</color>
    <color name="login_edit">#d1d1d1</color>
</resources>
