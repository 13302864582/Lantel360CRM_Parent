<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:text="456"
        android:textColor="@color/mine_name"
        android:textSize="@dimen/mine_card_item_value"
        android:id="@+id/value"
        android:layout_marginBottom="@dimen/mine_card_item_margin"
        style="@style/centerH_wrap_wh"/>

    <TextView
        android:text="积分"
        android:id="@+id/title"
        android:textColor="@color/mine_name"
        android:layout_gravity="center_horizontal"
        style="@style/centerH_wrap_wh"
        android:textSize="@dimen/mine_card_item_title"
        android:layout_marginTop="@dimen/mine_card_item_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
</RelativeLayout>