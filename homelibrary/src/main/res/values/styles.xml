    <style name="curriculum_time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <!--屏蔽默认的按钮图标-->
        <item name="android:button">@null</item>
        <!--设置自己在按钮图标-->
        <item name="android:drawableLeft">@drawable/check</item>
       <!-- 图标的内边距-->
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sick_leave</item>
        <item name="android:textColor">@color/sick_leave</item>
    </style>

    <style name="tab_top">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#525252</item>
    </style>

    <style name="output_img_text" parent="wrap_wh">
        <item name="android:textSize">@dimen/output_classes</item>
        <item name="android:textColor">@color/output_classes</item>
        <item name="android:layout_marginLeft">@dimen/output_classes_marginLeft</item>
    </style>

    <style name="output_btm_img">
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/output_btm_img</item>
    </style>

    <style name="output_btm_img_detail" parent="match_h_0_w">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="output_img_detail_inside" parent="LineH_wrap_wh">
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="output_btm_inside_text" parent="LineV_wrap_wh">
        <item name="android:layout_marginLeft">@dimen/output_detail_inside_text_marginLeft</item>
        <item name="android:textSize">@dimen/output_detail_inside_text</item>
        <item name="android:textColor">@color/output_detail_inside_text</item>
    </style>

    <style name="setting_pesonal_layout" parent="match_wrap">
        <item name="android:layout_marginLeft">@dimen/line_margin_output</item>
        <item name="android:layout_marginRight">@dimen/line_margin_output</item>
    </style>

    <style name="line">
        <item name="android:background">@color/line</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/line</item>
    </style>

    <style name="setting_pesonal_headImg">
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginTop">@dimen/setting_headImg</item>
        <item name="android:layout_width">@dimen/setting_pesonal_headImg</item>
        <item name="android:layout_height">@dimen/setting_pesonal_headImg</item>
    </style>

    <style name="setting_pesonal_title" parent="wrap_wh">
        <item name="android:layout_marginLeft">@dimen/setting_pesonal_title_marginLeft</item>
        <item name="android:layout_marginTop">@dimen/setting_pesonal_title_margin</item>
        <item name="android:layout_marginBottom">@dimen/setting_pesonal_title_margin</item>
        <item name="android:textSize">@dimen/setting_pesonal_title</item>
        <item name="android:textColor">@color/setting_pesonal_title</item>
    </style>

    <style name="setting_pesonal_value" parent="wrap_wh">
        <item name="android:layout_marginLeft">@dimen/setting_pesonal_title_marginLeft</item>
        <item name="android:layout_marginTop">@dimen/setting_pesonal_title_margin</item>
        <item name="android:layout_marginBottom">@dimen/setting_pesonal_title_margin</item>
        <item name="android:textSize">@dimen/setting_pesonal_title</item>
        <item name="android:textColor">@color/setting_pesonal_title</item>
    </style>

    <style name="setting_name" parent="wrap_wh">
        <item name="android:textSize">@dimen/setting_pesonal_chageHead</item>
        <item name="android:textColor">@color/setting_pesonal_chageHead</item>
        <item name="android:layout_marginTop">@dimen/setting_headImg</item>
        <item name="android:layout_marginBottom">@dimen/setting_headImg</item>
    </style>

    <style name="edit_pass_item_title" parent="wrap_wh">
        <item name="android:textSize">@dimen/edit_pass_item_title</item>
        <item name="android:textColor">@color/edit_pass_item_title</item>
        <item name="android:layout_marginBottom">@dimen/edit_pass_item_title_marginBottm</item>
    </style>

    <style name="phoneTitle_edit" parent="wrap_wh">
        <item name="android:inputType">textPassword</item>
        <item name="android:maxEms">21</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/phoneTitle_edit</item>
        <item name="android:textColor">@color/phoneTitle_edit</item>
        <item name="android:textColorHint">@color/phoneTitle_edit</item>
    </style>

    <style name="bind_account_title" parent="wrap_wh">
        <item name="android:textSize">@dimen/bind_account_title</item>
        <item name="android:textColor">@color/bind_account_title</item>
    </style>

    <style name="bind_account_value" parent="wrap_wh">
        <item name="android:layout_margin">@dimen/account_value_margin</item>
        <item name="android:textSize">@dimen/phoneTitle_edit</item>
        <item name="android:textColor">@color/phoneTitle_edit</item>
    </style>


    <dimen name="account_value_margin">4dp</dimen>
</resources>
