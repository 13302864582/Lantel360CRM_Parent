<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/setting_pesonal_layout">

    <View
        android:id="@+id/line"
        style="@style/line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/title"
        style="@style/setting_pesonal_title"
        android:text="出生"
        app:layout_constraintBottom_toTopOf="@+id/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/setting_pesonal_title_marginLeft"
        android:src="@mipmap/item_arrow"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/value"
        style="@style/setting_pesonal_value"
        android:text="haha"
        app:layout_constraintBaseline_toBaselineOf="@id/title"
        app:layout_constraintLeft_toLeftOf="@id/title"
        app:layout_constraintRight_toLeftOf="@id/arrow" />


</androidx.constraintlayout.widget.ConstraintLayout>